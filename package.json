{
  "name": "@wikimedia/graphql",
  "description": "GraphQL Query Service for Wikimedia",
  "scripts": {
    "test": "eslint . && jest"
  },
  "repository": {
    "type": "git",
    "url": "https://gerrit.wikimedia.org/r/labs/tools/graphql"
  },
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-wikimedia": "^0.6.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^26.0.1"
  },
  "dependencies": {
    "accept": "^3.0.2",
    "apollo-datasource-rest": "^0.1.5",
    "apollo-server": "^2.15.0",
    "apollo-server-core": "^2.14.4",
    "dataloader": "^1.4.0",
    "graphql": "^14.6.0",
    "lodash": "^4.17.15",
    "node-fetch": "^2.2.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
